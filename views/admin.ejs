<!DOCTYPE html>
<html lang="fr">
<head>
    <%- include('partials/head', { title: 'Admin Panel - Tah Prod' }) %>
</head>
<body>
    <%- include('partials/navbar') %>

    <main class="main-content">
        <div class="form-container">
            <h1 class="form-title">Admin Panel</h1>
            <% if (typeof success !== 'undefined' && success) { %>
                <div class="error-message" style="border-color: #00ff00; color: #00ff00;">
                    <%= success %>
                </div>
            <% } %>
            <% if (typeof error !== 'undefined' && error) { %>
                <div class="error-message">
                    <%= error %>
                </div>
            <% } %>
            <form action="/admin" method="POST">
                <div class="form-group">
                    <label for="google_api_key" class="form-label">Google API Key</label>
                    <input type="text" id="google_api_key" name="google_api_key" class="form-input" value="<%= typeof config !== 'undefined' && config.google_api_key ? config.google_api_key : '' %>">
                </div>
                <button type="submit" class="btn">Save Configuration</button>
            </form>
        </div>
    </main>

    <%- include('partials/footer') %>
</body>
</html>
