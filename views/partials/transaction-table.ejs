<% if (transactions && transactions.length > 0) { %>
    <div class="table-wrapper">
        <table class="data-table">
            <thead>
                <tr>
                    <% if (showBandColumn) { %>
                        <th>Band</th>
                    <% } %>
                    <th>Date</th>
                    <th>Category</th>
                    <th>Description</th>
                    <th>Amount</th>
                </tr>
            </thead>
            <tbody>
                <% transactions.forEach(transaction => { %>
                    <tr class="clickable-row" data-transaction-id="<%= transaction.id %>" style="<%= transaction.status === 'pending' ? 'color: #ffeb3b;' : '' %>">
                        <% if (showBandColumn) { %>
                            <td><%= transaction.band_name %></td>
                        <% } %>
                        <td>
                            <% if (transaction.transaction_date) { %>
                                <%= new Date(transaction.transaction_date).toLocaleDateString() %>
                            <% } else { %>
                                -
                            <% } %>
                        </td>
                        <td><%= transaction.category_name || 'N/A' %></td>
                        <td>
                            <% const maxLength = 50; %>
                            <% if (transaction.description.length > maxLength) { %>
                                <%= transaction.description.substring(0, maxLength) %>...
                            <% } else { %>
                                <%= transaction.description %>
                            <% } %>
                        </td>
                        <td><%= transaction.type === 'expense' ? '-' : '' %><%= transaction.amount.toFixed(2) %> â‚¬</td>
                    </tr>
                <% }); %>
            </tbody>
        </table>
    </div>
<% } else { %>
    <p style="text-align: center; padding: 2rem;">No transactions yet.</p>
<% } %>

<script>
// Make transaction rows clickable
document.querySelectorAll('.clickable-row').forEach(row => {
    row.addEventListener('click', function() {
        const transactionId = this.getAttribute('data-transaction-id');
        window.location.href = '<%= detailUrlPrefix %>/' + transactionId;
    });
});
</script>
