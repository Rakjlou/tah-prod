<% if (transactions && transactions.length > 0) { %>
    <div class="table-wrapper">
        <table class="data-table">
            <thead>
                <tr>
                    <% if (showBandColumn) { %>
                        <th>Band</th>
                    <% } %>
                    <th>Date</th>
                    <th>Category</th>
                    <th>Description</th>
                    <th>Amount</th>
                </tr>
            </thead>
            <tbody>
                <% transactions.forEach(transaction => { %>
                    <tr class="clickable-row <%= transaction.status === 'pending' ? 'transaction-row-pending' : '' %>" data-transaction-id="<%= transaction.id %>">
                        <% if (showBandColumn) { %>
                            <td><%= transaction.band_name %></td>
                        <% } %>
                        <td>
                            <% if (transaction.transaction_date) { %>
                                <%= new Date(transaction.transaction_date).toLocaleDateString() %>
                            <% } else { %>
                                -
                            <% } %>
                        </td>
                        <td><%= transaction.category_name || 'N/A' %></td>
                        <td>
                            <% const maxLength = 50; %>
                            <% if (transaction.description.length > maxLength) { %>
                                <%= transaction.description.substring(0, maxLength) %>...
                            <% } else { %>
                                <%= transaction.description %>
                            <% } %>
                        </td>
                        <td><%= transaction.type === 'expense' ? '-' : '' %><%= transaction.amount.toFixed(2) %> â‚¬</td>
                    </tr>
                <% }); %>
            </tbody>
        </table>
    </div>
<% } else { %>
    <p class="text-center padding-2">No transactions yet.</p>
<% } %>

<script src="/js/transaction-table.js"></script>
<script>
// Initialize clickable rows with the appropriate URL prefix
initializeClickableRows('<%= detailUrlPrefix %>');
</script>
