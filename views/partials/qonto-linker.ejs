<% if (isAdmin) { %>
<div class="qonto-linker-section">
    <h2 class="qonto-section-title">Link to Bank Transactions (Qonto)</h2>

    <!-- Validation Status -->
    <div id="validation-status" class="validation-status qonto-validation-status">
        <div class="validation-summary">
            <strong>Website Transaction:</strong>
            <%= transaction.type === 'expense' ? '-' : '+' %><%= transaction.amount.toFixed(2) %> €

            <% if (linkedQontoTransactions && linkedQontoTransactions.length > 0) { %>
                <%
                    const linkedTotal = linkedQontoTransactions.reduce((sum, link) => sum + (link.allocated_amount || link.qonto_amount || 0), 0);
                    const expectedTotal = transaction.type === 'expense' ? -transaction.amount : transaction.amount;
                    const difference = Math.abs(linkedTotal - expectedTotal);
                    const isValid = difference < 0.01;
                %>
                <span class="qonto-margin-left">
                    <strong>Linked Qonto Total:</strong> <%= linkedTotal.toFixed(2) %> €
                </span>
                <span class="validation-badge <%= isValid ? 'badge-success' : 'badge-error' %> qonto-margin-left">
                    <%= isValid ? '✓ Match' : '⚠ Discrepancy: ' + difference.toFixed(2) + ' €' %>
                </span>
            <% } %>
        </div>
    </div>

    <!-- Currently linked transactions -->
    <% if (linkedQontoTransactions && linkedQontoTransactions.length > 0) { %>
        <div class="linked-transactions qonto-linked-transactions">
            <h3 class="qonto-small-section-title">Currently Linked:</h3>
            <table class="data-table">
                <thead>
                    <tr>
                        <th>Date</th>
                        <th>Amount</th>
                        <th>Counterparty</th>
                        <th>Reference</th>
                        <th>Actions</th>
                    </tr>
                </thead>
                <tbody>
                    <% linkedQontoTransactions.forEach(link => { %>
                        <tr>
                            <td><%= link.qonto_settled_at ? new Date(link.qonto_settled_at).toLocaleDateString() : '-' %></td>
                            <td>
                                <%= (link.allocated_amount || link.qonto_amount) %> <%= link.qonto_currency || 'EUR' %>
                                <% if (link.allocated_amount && Math.abs(link.allocated_amount) < Math.abs(link.qonto_amount)) { %>
                                    <span class="qonto-partial-amount">(of <%= link.qonto_amount %>)</span>
                                <% } %>
                            </td>
                            <td><%= link.qonto_label || '-' %></td>
                            <td><%= link.qonto_reference || '-' %></td>
                            <td>
                                <button type="button" class="btn btn-small qonto-unlink-btn" onclick="unlinkQonto(<%= link.id %>)">
                                    Unlink
                                </button>
                            </td>
                        </tr>
                    <% }); %>
                </tbody>
            </table>
        </div>
    <% } else { %>
        <p class="section-spacing qonto-partial-amount">No Qonto transactions linked yet.</p>
    <% } %>

    <!-- Search button -->
    <button type="button" class="btn" onclick="searchQontoMatches()" id="search-qonto-btn">
        Search Qonto Transactions
    </button>

    <!-- Loading indicator -->
    <div id="qonto-loading" class="hidden qonto-loading">
        <p>Searching Qonto transactions...</p>
    </div>

    <!-- Error display -->
    <div id="qonto-error" class="hidden qonto-error">
    </div>

    <!-- Results container -->
    <div id="qonto-matches" class="hidden qonto-matches">
        <h3 class="qonto-small-section-title">Qonto Transactions:</h3>
        <div id="qonto-matches-content"></div>
        <button type="button" class="btn qonto-link-btn" onclick="linkSelected()" id="link-selected-btn">
            Link Selected
        </button>
    </div>

    <!-- Template for Qonto transaction table -->
    <template id="qonto-table-template">
        <table class="data-table">
            <thead>
                <tr>
                    <th class="qonto-checkbox-header"><input type="checkbox" id="select-all-qonto" onclick="toggleSelectAll()"></th>
                    <th>Date</th>
                    <th>Amount</th>
                    <th>Available</th>
                    <th>Direction</th>
                    <th>Counterparty</th>
                    <th>Reference</th>
                    <th>Status</th>
                </tr>
            </thead>
            <tbody id="qonto-table-body"></tbody>
        </table>
        <div class="qonto-help-text">
            <p>Only transactions with matching direction are shown</p>
            <p>Available = Remaining amount that can be allocated</p>
            <p>Grayed out transactions cannot be linked (fully allocated)</p>
        </div>
    </template>

    <!-- Template for Qonto transaction row -->
    <template id="qonto-row-template">
        <tr>
            <td><input type="checkbox" class="qonto-checkbox" data-qonto-id=""></td>
            <td class="qonto-date">-</td>
            <td class="qonto-amount">0.00 EUR</td>
            <td class="qonto-available">N/A</td>
            <td class="qonto-direction"></td>
            <td class="qonto-label">-</td>
            <td class="qonto-reference">-</td>
            <td class="qonto-status">completed</td>
        </tr>
    </template>

    <!-- Load Qonto Linker JavaScript -->
    <script src="/js/qonto-linker.js"></script>
</div>
<% } %>
