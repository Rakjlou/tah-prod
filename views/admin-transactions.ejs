<!DOCTYPE html>
<html lang="fr">
<head>
    <%- include('partials/head', { title: 'All Transactions - Tah Prod' }) %>
</head>
<body>
    <%- include('partials/navbar') %>

    <main class="main-content">
        <div class="form-container container-full-wide">
            <h1 class="form-title">All Transactions</h1>
            <%- include('partials/messages') %>

            <div class="info-box">
                <div class="mb-1">
                    <form method="GET" action="/admin/transactions" class="flex flex-gap-1 flex-align-end flex-wrap">
                        <div class="form-group mb-0 min-width-200">
                            <label for="band" class="form-label">Filter by Band</label>
                            <select id="band" name="band" class="form-input" onchange="this.form.submit()">
                                <option value="">All Bands</option>
                                <% if (organizationBandId) { %>
                                    <option value="<%= organizationBandId %>" <%= bandFilter === organizationBandId ? 'selected' : '' %>>
                                        Organization
                                    </option>
                                <% } %>
                                <% bands.forEach(band => { %>
                                    <% if (band.id !== organizationBandId) { %>
                                        <option value="<%= band.id %>" <%= bandFilter === band.id ? 'selected' : '' %>>
                                            <%= band.name %>
                                        </option>
                                    <% } %>
                                <% }); %>
                            </select>
                        </div>

                        <div class="form-group mb-0 min-width-150">
                            <label for="status" class="form-label">Filter by Status</label>
                            <select id="status" name="status" class="form-input" onchange="this.form.submit()">
                                <option value="">All Statuses</option>
                                <option value="pending" <%= statusFilter === 'pending' ? 'selected' : '' %>>Pending</option>
                                <option value="validated" <%= statusFilter === 'validated' ? 'selected' : '' %>>Validated</option>
                            </select>
                        </div>

                        <button type="submit" class="btn btn-small">Apply Filters</button>
                        <% if (bandFilter || statusFilter) { %>
                            <a href="/admin/transactions" class="btn btn-small">Clear Filters</a>
                        <% } %>
                    </form>
                </div>

                <%- include('partials/transaction-table', {
                    transactions,
                    showBandColumn: true,
                    detailUrlPrefix: '/admin/transactions'
                }) %>
            </div>
        </div>
    </main>

    <%- include('partials/footer') %>
</body>
</html>
