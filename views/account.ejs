<!DOCTYPE html>
<html lang="fr">
<head>
    <%- include('partials/head', { title: 'My Account - Tah Prod' }) %>
</head>
<body>
    <%- include('partials/navbar') %>

    <main class="main-content">
        <div class="form-container">
            <h1 class="form-title">My Account</h1>
            <%- include('partials/messages') %>

            <% if (band) { %>
                <div class="info-box">
                    <h2 class="section-title">Band Information</h2>
                    <p><strong>Band Name:</strong> <%= band.name %></p>
                    <p><strong>Email:</strong> <%= band.email %></p>

                    <% if (band.folder_id) { %>
                        <div class="info-box-divider">
                            <h3 class="section-title">Google Drive Resources</h3>
                            <p>
                                <a href="https://drive.google.com/drive/folders/<%= band.folder_id %>" target="_blank">
                                    View Band Folder
                                </a>
                            </p>
                        </div>
                    <% } %>
                </div>

                <form action="/account/password" method="POST" class="info-box">
                    <h2 class="section-title">Change Password</h2>

                    <div class="form-group">
                        <label for="currentPassword" class="form-label">Current Password</label>
                        <input type="password" id="currentPassword" name="currentPassword" class="form-input" required>
                    </div>

                    <div class="form-group">
                        <label for="newPassword" class="form-label">New Password</label>
                        <input type="password" id="newPassword" name="newPassword" class="form-input" required>
                    </div>

                    <div class="form-group">
                        <label for="confirmPassword" class="form-label">Confirm New Password</label>
                        <input type="password" id="confirmPassword" name="confirmPassword" class="form-input" required>
                    </div>

                    <button type="submit" class="btn">Update Password</button>
                </form>
            <% } %>
        </div>
    </main>

    <%- include('partials/footer') %>
</body>
</html>
