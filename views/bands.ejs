<!DOCTYPE html>
<html lang="fr">
<head>
    <%- include('partials/head', { title: 'Bands - Tah Prod' }) %>
</head>
<body>
    <%- include('partials/navbar') %>

    <main class="main-content">
        <div class="form-container" style="max-width: 900px; width: 100%;">
            <h1 class="form-title">Bands</h1>
            <%- include('partials/messages') %>

            <% if (!googleConfigured) { %>
                <div class="info-box">
                    <p>
                        Google integration not configured yet. Please configure it in the <a href="/config" style="color: #ffffff; text-decoration: underline;">Config section</a> first.
                    </p>
                </div>
            <% } else if (!isGoogleAuthenticated) { %>
                <div class="info-box">
                    <p>
                        To create band spreadsheets, you need to authenticate with Google first.
                    </p>
                    <a href="/auth/google" class="btn">
                        Authenticate with Google
                    </a>
                </div>
            <% } %>

            <% if (googleConfigured && isGoogleAuthenticated) { %>
            <form id="band-form" action="/bands" method="POST" class="info-box">
                <h2 class="section-title">Add New Band</h2>
                <div class="form-group">
                    <label for="name" class="form-label">Band Name</label>
                    <input type="text" id="name" name="name" class="form-input" required>
                </div>
                <div class="form-group">
                    <label for="email" class="form-label">Contact Email</label>
                    <input type="email" id="email" name="email" class="form-input" required>
                </div>
                <button type="submit" id="submit-btn" class="btn">Create Band</button>
            </form>
            <% } %>

            <% if (bands && bands.length > 0) { %>
                <h2 class="section-title">Existing Bands</h2>
                <table class="data-table">
                    <thead>
                        <tr>
                            <th>Name</th>
                            <th>Email</th>
                            <th>Folder</th>
                            <th>Created</th>
                            <th>Actions</th>
                        </tr>
                    </thead>
                    <tbody>
                        <% bands.forEach(band => { %>
                            <tr>
                                <td><%= band.name %></td>
                                <td><%= band.email %></td>
                                <td>
                                    <% if (band.folder_id) { %>
                                        <a href="https://drive.google.com/drive/folders/<%= band.folder_id %>" target="_blank">View Folder</a>
                                    <% } else { %>
                                        N/A
                                    <% } %>
                                </td>
                                <td><%= new Date(band.created_at).toLocaleDateString() %></td>
                                <td>
                                    <form action="/admin/bands/<%= band.id %>/reset-password" method="POST" style="display: inline; margin-right: 0.5rem;">
                                        <button type="submit" class="btn btn-small">Reset Password</button>
                                    </form>
                                    <form action="/admin/bands/<%= band.id %>/delete" method="POST" style="display: inline;">
                                        <button type="submit" class="btn btn-small" onclick="return confirm('Are you sure you want to delete <%= band.name %>? This will delete the band, user account, all transactions, and Google Drive folder. This action cannot be undone.')">Delete</button>
                                    </form>
                                </td>
                            </tr>
                        <% }); %>
                    </tbody>
                </table>
            <% } else { %>
                <p style="text-align: center; padding: 2rem;">No bands created yet.</p>
            <% } %>
        </div>
    </main>

    <%- include('partials/footer') %>

    <script>
        document.getElementById('band-form')?.addEventListener('submit', function(e) {
            const submitBtn = document.getElementById('submit-btn');

            // Disable submit button and change text
            submitBtn.disabled = true;
            submitBtn.textContent = 'Creating...';
        });
    </script>
</body>
</html>
